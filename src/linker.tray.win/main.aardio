mainForm.protectedTask = function(run){
	import sys.runAsTask;
	import process.popen;
	
	if(run)
	{
		task = sys.runAsTask(mainForm.serviceName+"-protected");
		trigger = task.definition.triggers.Create(task.schedule.TASK_TRIGGER_TIME);
		trigger.Enabled = true;
		trigger.StartBoundary = tostring(time.now(),"%Y-%m-%dT%H:%M:%S","chs"); 
		trigger.Repetition.Interval = "PT1M";
		trigger.Repetition.StopAtDurationEnd = false;
		trigger.ExecutionTimeLimit = "PT0S";
		
		task.trigger.Enabled = false;
		task.trigger =  trigger;
		task.register("",io.joinpath(io._exedir,"configs/protected.bat"),io._exedir);
		process.popen.cmd(`schtasks /change /tn "`+mainForm.serviceName+`-protected" /ru "SYSTEM"`)
		
		string.save("configs/protected.bat",`@echo off
chcp 65001 >nul
setlocal enabledelayedexpansion
set SERVICE_NAME=`+mainForm.serviceName+`
sc query %SERVICE_NAME% | find "STATE" | find "STOPPED" >nul

if !errorlevel! equ 0 (
    sc start %SERVICE_NAME%
)`);
	}else
	{
		task = sys.runAsTask(mainForm.serviceName+"-protected");
		task.delete();
		fsys.delete("configs/protected.bat");
	}
	mainForm.checkService();
}
mainForm.protectedTaskCheck = function(){
